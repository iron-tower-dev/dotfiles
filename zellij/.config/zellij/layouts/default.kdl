// Default Zellij layout
// Clean layout with status bar at bottom showing session info, date/time, and tabs

layout {
    default_tab_template {
        // Main terminal content area
        children
        
        // Compact status bar at bottom with date/time and session info
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    tab name="Terminal" focus=true {
        pane
    }
}
